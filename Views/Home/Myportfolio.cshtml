
@{
    ViewData["Title"] = "Myportfolio";
}

<div class="main-wrapper">
    <section class="cta-section theme-bg-light py-5">
        <div class="container text-center single-col-max-width">
            <h2 class="heading">Portfolio</h2>
            <div class="intro">
                <p>Hi, I am Ahmed Hammad. I’m a Full Stack Android Developer, working in java and kotlin for complex scalable mobile apps. Welcome to my personal website!</p>

            </div>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Contact" target="_blank"><i class="fas fa-paper-plane mr-2"></i>Hire Me</a>


        </div><!--//container-->
    </section>
    <section class="projects-list px-3 py-5 p-md-5">
        <div class="container">
            <div class="text-center">
                <ul id="filters" class="filters mb-5 mx-auto pl-0">
                    <li class="type active mb-3 mb-lg-0" data-filter="*">All</li>
                    <li class="type  mb-3 mb-lg-0" data-filter=".webapp">Mobile App</li>
                    
                </ul><!--//filters-->
            </div>

            <div class="project-cards row isotope">
                <div class="isotope-item col-md-6 mb-5 webapp ">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="~/Images/MainIslam.jpeg" class="card-img" height="190" alt="image">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="/Home/Projectpage" class="theme-link">Alkarim Islamic Application</a></h5>
                                    <p class="card-text">
                                        <b>Alkarim Islamic application </b>which will provide help to Muslims regarding Islamic queries.
                                    </p>
                                    <p class="card-text"><small class="text-muted">Final Year Project</small></p>
                                </div>
                            </div>
                        </div>
                        <div class="link-mask">
                            <a class="link-mask-link" asp-controller="Home" asp-action="Projectpage"></a>
                            <div class="link-mask-text">
                                <a class="btn btn-secondary" asp-controller="Home" asp-action="Projectpage">
                                    <i class="fas fa-eye mr-2"></i>View Case Study
                                </a>
                            </div>
                        </div><!--//link-mask-->
                    </div><!--//card-->
                </div><!--//col-->
                <div class="isotope-item col-md-6 mb-5 frontend  webapp">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="~/Images/ulimatewallpaper.jpg" class="card-img" alt="image">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="/Home/psd" class="theme-link">Ulitmate Wallpaper Application</a></h5>
                                    <p class="card-text">
                                        This application provides the best wallpapers for your <b>Android phone and tablet.</b>
                                    </p>
                                    <p class="card-text"><small class="text-muted">Fiverr Project</small></p>
                                </div>
                            </div>
                        </div>
                        <div class="link-mask">
                            <a class="link-mask-link" href="/Home/Projectcards"></a>
                            <div class="link-mask-text">
                                <a class="btn btn-secondary" asp-controller="Home" asp-action="psd">
                                    <i class="fas fa-eye mr-2"></i>View Case Study
                                </a>
                            </div>
                        </div><!--//link-mask-->
                    </div><!--//card-->
                </div><!--//col-->
                <div class="isotope-item col-md-6 mb-5 frontend html">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="~/Images/Social.jpg" style="height:150px" class="card-img mt-4" alt="image">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="/Home/projectcards" class="theme-link">Jurrek Society</a></h5>
                                    <p class="card-text"> <b>Social media facilitate the development</b> of online social networks by connecting a user's profile with those of other individuals or groups.</p>
                                    <p class="card-text"><small class="text-muted">Fiverr Project</small></p>
                                </div>
                            </div>
                        </div>
                        <div class="link-mask">
                            <a class="link-mask-link" href="/Home/projectcards"></a>
                            <div class="link-mask-text">
                                <a class="btn btn-secondary" asp-controller="Home" asp-action="projectcards">
                                    <i class="fas fa-eye mr-2"></i>View Case Study
                                </a>
                            </div>
                        </div><!--//link-mask-->
                    </div><!--//card-->
                </div><!--//col-->

            </div><!--//row-->

        </div>
    </section>

   

</div>


